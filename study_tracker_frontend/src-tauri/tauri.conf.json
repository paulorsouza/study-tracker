{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "study_tracker_frontend",
  "version": "0.1.0",
  "identifier": "com.studytracker.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "study_tracker_frontend",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "http": {
      "scope": ["http://localhost:8080/api/*"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
